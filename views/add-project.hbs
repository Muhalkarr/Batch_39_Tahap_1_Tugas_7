  <div class="form-bekron">
    <h1 class="add-my-project" >ADD MY PROJECT</h1>
    <form action="/add-project" method="post">
      <div class="mb-3">
        <label for="inputTitle" class="form-label">Name</label>
        <input type="input-name" class="form-control" id="input-name" name="inputName">
      </div>

      <div class="Date">
        <div class="start-date" style="margin-right: 30px;" >
          <label for="input-date" >Start Date</label>
          <input class="date-input" id="input-start-date" name="inputStartDate" type="date" />
        </div>
        <div class="end-date">
          <label for="input-date">End Date</label>
          <input class="date-input" id="input-end-date" name="inputEndDate" type="date" />
        </div>
      </div>
      
      <div class="mb-3">
        <label for="inputContent" class="form-label">Description</label>
        <textarea class="form-control" id="input-description" name="inputDescription" rows="5" style="resize:none"></textarea>
      </div>

      <div>
        <label for="checkbox">Technologies</label>
        <div class="checkbox-technologies">
          <div class="checkbox-kiri" >
            <div>
              <input value="fa-node-js" type="checkbox" id="inputNode" name="inputNode">
              <label class="fontTech" for="inputNode"> Node JS </label>
            </div>
            <div>
              <input value="fa-react" type="checkbox" id="inputReact" name="inputReact">
              <label class="fontTech" for="inputReact" > React JS </label>
            </div>
          </div>
          <div class="checkbox-kanan">
            <div>
              <input value="fa-java" type="checkbox" id="inputNext" name="inputNext">
              <label class="fontTech" for="inputNext"> Next JS </label>
            </div>
            <div>
              <input value="fa-square-js" type="checkbox" id="inputTS" name="inputTS">
              <label class="fontTech" for="inputTS"> TypeScript </label>
            </div>
          </div>
        </div>
      </div>

      <div class="mb-3">
          <label for="inputImage" class="form-label">Upload Image</label>
          <input type="file" class="form-control" id="input-image" name="inputImage">
      </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <button type="submit" class="btn bg-submit text-white px-3">Submit</button>
      </div>
  </form>


